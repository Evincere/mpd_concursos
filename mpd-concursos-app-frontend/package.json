{
  "name": "mpd-concursos-app-frontend",
  "version": "1.0.0",
  "description": "Aplicación de gestión de concursos del Ministerio Público de la Defensa",
  "main": "./electron/main.js",
  "author": {
    "name": "Semper Evincere"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --configuration production",
    "watch": "ng build --watch --configuration development",
    "electron": "ng build --configuration production && electron .",
    "pack": "electron-builder --dir",
    "dist": "ng build --configuration production && electron-builder",
    "make:win": "ng build --configuration production && electron-builder --win",
    "make:mac": "ng build --configuration production && electron-builder --mac",
    "make:linux": "ng build --configuration production && electron-builder --linux",
    "test": "ng test"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^18.2.13",
    "@angular/cdk": "^17.1.0",
    "@angular/common": "^18.2.13",
    "@angular/compiler": "^18.2.13",
    "@angular/core": "^18.2.13",
    "@angular/forms": "^18.2.13",
    "@angular/material": "^17.1.0",
    "@angular/platform-browser": "^18.2.13",
    "@angular/platform-browser-dynamic": "^18.2.13",
    "@angular/router": "^18.2.13",
    "@auth0/angular-jwt": "^5.2.0",
    "@fortawesome/fontawesome-free": "^6.6.0",
    "clean": "^4.0.2",
    "crypto-js": "^4.2.0",
    "http-proxy-middleware": "^3.0.3",
    "jwt-decode": "^4.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.10"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.2.14",
    "@angular/cli": "^18.2.14",
    "@angular/compiler-cli": "^18.2.13",
    "@types/crypto-js": "^4.2.2",
    "@types/jasmine": "~5.1.0",
    "autoprefixer": "^10.4.20",
    "electron": "^28.1.4",
    "electron-builder": "^24.13.3",
    "jasmine-core": "~5.2.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.1",
    "typescript": "~5.5.4"
  },
  "build": {
    "appId": "ar.gov.mpd.concursos",
    "productName": "MPD Concursos",
    "directories": {
      "output": "dist/electron",
      "buildResources": "build"
    },
    "files": [
      "dist/browser/**/*",
      "electron/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "dist/browser",
        "to": "app/dist/browser",
        "filter": [
          "**/*"
        ]
      }
    ],
    "asar": true,
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "uninstallDisplayName": "Desinstalar MPD Concursos",
      "license": "LICENSE.txt",
      "artifactName": "MPD-Concursos-Setup-${version}.${ext}"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "src/assets/icons/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "src/assets/icons/icon.png"
    }
  }
}
